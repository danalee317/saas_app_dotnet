<TelerikGrid Data=@_logos>
  <GridColumns>
    <GridColumn Field="Name" />
    <GridColumn Title="Logo" TextAlign=@ColumnTextAlign.Center>
      <Template>
        @{ var logo = context as Logo; }
        <img src="@logo.Href" alt="@logo.DisplayName" class="img img-fluid my-3" style="max-width:300px;" />
      </Template>
    </GridColumn>
    <GridCommandColumn>
      <div class="text-center">
        <GridCommandButton Command="ReplaceLogo"
                           Title="Update Logo"
                           Primary="true"
                           IconClass="fad fa-upload"
                           OnClick=@UpdateLogo>Update Logo</GridCommandButton>
      </div>
    </GridCommandColumn>
  </GridColumns>
</TelerikGrid>

<TelerikWindow Visible=@(_selected != null)
               Modal=@true>
  <WindowTitle>Update Logo</WindowTitle>
  <WindowActions>
    <WindowAction Name="Close" OnClick=@(() => _selected = null) />
  </WindowActions>
</TelerikWindow>
