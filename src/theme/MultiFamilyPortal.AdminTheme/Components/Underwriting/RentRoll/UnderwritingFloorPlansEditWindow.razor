<TelerikWindow Modal="true"
               Centered="true"
               Visible=@(FloorPlan != null)
               Height=@_height Width="600px">
  <WindowTitle>
    <strong>@_title</strong>
  </WindowTitle>
  <WindowActions>
    <WindowAction Name="Close" OnClick=@CloseAsync />
  </WindowActions>
  <WindowContent>
    <LoaderContainer Context=@FloorPlan>
      @if (FloorPlan.Id == default)
      {
        <UnderwritingFloorPlansEditor Property="@Property"
                                      FloorPlan="@FloorPlan"
                                      FloorPlanChanged=@CloseAsync />
      }
      else
      {
        <TelerikTabStrip TabPosition="TabPosition.Top">
          <TabStripTab Title="Floor Plan">
            <UnderwritingFloorPlansEditor Property="@Property"
                                          FloorPlan="@FloorPlan"
                                          FloorPlanChanged=@CloseAsync />
          </TabStripTab>
          <TabStripTab Title="Roll Units">
            <UnderwritingUnitListEditor FloorPlan=@FloorPlan />
          </TabStripTab>
        </TelerikTabStrip>
      }
    </LoaderContainer>
  </WindowContent>

</TelerikWindow>
