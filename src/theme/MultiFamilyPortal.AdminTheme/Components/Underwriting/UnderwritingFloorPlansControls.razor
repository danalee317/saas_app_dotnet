<TelerikWindow @bind-Visible="@ShowWindow" Modal=@true Height="600px" Width="600px">
  <WindowTitle>
    <strong>The Title</strong>
  </WindowTitle>
  <WindowActions>
    <WindowAction Name="Close"></WindowAction>
  </WindowActions>
  <WindowContent>
    <div class="container">
      <div class="row">
        <div class="col-3">
          <label for="floor-name" class="form-label mt-4">Name</label>
        </div>
        <div class="col-9 my-3">
          <TelerikTextBox class="form-control w-100 mx-2" id="floor-name"/>
        </div>
        <div class="col-3 my-3">
          <label for="floor-beds" class="form-label my-3">Beds</label>
        </div>
        <div class="col-3 my-3">
          <TelerikNumericTextBox  Class="form-control w-100" 
                                  Min="1"
                                  Id="floor-beds"
                                  Step="1" />
        </div>
        <div class="col-3 my-3">
          <label for="floor-baths" class="form-label my-3">Baths</label>
        </div>
        <div class="col-3 my-3">
          <TelerikNumericTextBox  Class="form-control w-100" 
                                  Min="1"
                                  Id="floor-baths"
                                  Step="1" />
        </div>
        <div class="col-3 my-3">
          <label for="floor-sqft" class="form-label my-3">Sqft</label>
        </div>
        <div class="col-3 my-3">
          <TelerikNumericTextBox  Class="form-control w-100" 
                                  Min="1"
                                  Id="floor-sqft"
                                  Step="1" />
        </div>
        <div class="col-3 my-3">
          <label for="floor-upgrade" class="form-label my-3">Upgraded</label>
        </div>
        <div class="col-3 my-3">
          <input type="checkbox" class="form-check-input my-3 ms-2" id="floor-upgrade"/>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-3 my-3">
          <label for="floor-avgrent" class="form-label my-3">Average Rent</label>
        </div>
        <div class="col-3 my-3">
          <TelerikNumericTextBox  Class="form-control w-100" 
                                  Min="100"
                                  Id="floor-avgrent"
                                  Step="5" />
        </div>
        <div class="col-3 my-3">
          <label for="floor-mktrent" class="form-label my-3">Market Rent</label>
        </div>
        <div class="col-3 my-3">
          <TelerikNumericTextBox  Class="form-control w-100" 
                                  Min="100"
                                  Id="floor-mktrent"
                                  Step="5" />
        </div>
        <div class="col-3 my-3">
          <label for="floor-units" class="form-label my-3">Units</label>
        </div>
        <div class="col-3 my-3">
          <TelerikNumericTextBox  Class="form-control w-100" 
                                  Min="5"
                                  Id="floor-units"
                                  Step="1" />
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 offset-md-2">
          <button>
            Clear/Remove
          </button>
        </div>
        <div class="col-md-3 offset-md-2">
          <button>
            Add/Save
          </button>
        </div>
      </div>
    </div>
  </WindowContent>

</TelerikWindow>

<PortalNotification @ref="_notification" />
