<TelerikWindow Visible="@(FloorPlan is not null)"
               Modal="true"
               Centered="true"
               Height=@_height Width="600px">
  <WindowTitle>
    <strong>@_title</strong>
  </WindowTitle>
  <WindowActions>
    <WindowAction Name="Close" />
  </WindowActions>
  <WindowContent>
    @if (FloorPlan.Id == default)
    {
      <UnderwritingFloorPlansControls FloorPlan="@FloorPlan"
                                      Property="@Property"
                                      FloorPlanChanged=@PropertyUpdated/>
    }
    else
    {
      <TelerikTabStrip TabPosition="TabPosition.Top">
        <TabStripTab Title="Floor Plans">
          <UnderwritingFloorPlansControls FloorPlan="@FloorPlan"
                                          Property="@Property"
                                          FloorPlanChanged=@PropertyUpdated/>
        </TabStripTab>
        <TabStripTab Title="Roll Units">
          <UnderwritingUnitsAddition FloorPlan="@FloorPlan" UpdateModel=@PropertyUpdated />
        </TabStripTab>
      </TelerikTabStrip>
    }
  </WindowContent>

</TelerikWindow>
