<div class="w-100 border" style="height: 100%">
    <div id="title" class="m-2 d-flex justify-content-between">
        <div class="text-secondary">
            <b>
                @Title
                (@(Active+OfferAccepted+OfferRejected+OfferSubmitted+Passed+LOIAccepted+LOIRejected+LOISubmitted))
            </b>
        </div>
        <div>
            <span class=@("badge bg-"+TimeFrameColor)>
                <small>@TimeFrame</small>
            </span>
        </div>
    </div>
    <hr />
    <div id="body" class="mx-2">
        <div class="row">
            <div class="col-md-6">
                <div class="d-flex justify-content-between my-1 small">
                    <div>Active</div>
                    <div>@Active</div>
                </div>
                <div class="d-flex justify-content-between my-1 small">
                    <div>Offer Submitted</div>
                    <div>@OfferSubmitted</div>
                </div>
                <div class="d-flex justify-content-between my-1 small">
                    <div>Offer Accepted</div>
                    <div>@OfferAccepted</div>
                </div>
                <div class="d-flex justify-content-between my-1 small">
                    <div>Offer Rejected</div>
                    <div>@OfferRejected</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-between my-1 small">
                    <div>Passed</div>
                    <div>@Passed</div>
                </div>
                <div class="d-flex justify-content-between my-1 small">
                    <div>LOI Submitted</div>
                    <div>@LOISubmitted</div>
                </div>
                <div class="d-flex justify-content-between my-1 small">
                    <div>LOI Accepted</div>
                    <div>@LOIAccepted</div>
                </div>
                <div class="d-flex justify-content-between my-1 small">
                    <div>LOI Rejected</div>
                    <div>@LOIRejected</div>
                </div>
            </div>
        </div>
    </div>
</div>
