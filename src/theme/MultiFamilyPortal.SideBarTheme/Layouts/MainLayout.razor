@inherits LayoutComponentBase

<SiteTitle />

<CascadingValue Value="User">
  <div class="page">
    <div class="sidebar">
      @if(SideBar != null)
      {
        <DynamicComponent Type=@SideBar />
      }
    </div>

    <main>
      <div class="top-row px-4 auth">
        <LoginDisplay />
      </div>

      <article class="content px-4">
        <TelerikRootComponent>
          @Body
        </TelerikRootComponent>
      </article>
    </main>
  </div>
</CascadingValue>


