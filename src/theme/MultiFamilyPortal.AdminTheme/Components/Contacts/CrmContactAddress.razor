<div class="container">
  <div class="row">
    <div class="col-12 my-3">
      <div class="form-floating">
        <textarea class="form-control" 
                  id="contactAddress1"
                  style="height: 80px"
                  value="@Address.Address1" 
                  @onchange="@((args) => Address.Address1 = args.Value.ToString())" 
                  @onblur="@(() => UpdateParent())"/>
        <label for="address1">Address 1</label>
      </div>
    </div>

    <div class="col-12 my-3">
      <div class="form-floating">
        <textarea class="form-control"
                  id="contactAddress2"
                  style="height: 80px"
                  value="@Address.Address2" 
                  @onchange="@((args) => Address.Address2 = args.Value.ToString())"
                  @onblur="@(() => UpdateParent())" />
        <label for="contactAddress2">Address 2</label>
      </div>
    </div>

    <div class="col-12">
      <div class="row">
        <div class="col-md-4 my-3">
          <div class="form-floating">
            <input type="text"
                   class="form-control"
                   id="contactCity"
                   @bind-value="@Address.City" 
                   @onblur="@(() => UpdateParent())"/>
            <label for="contactCity">City</label>
          </div>
        </div>

        <div class="col-md-4 my-3">
          <div class="form-floating">
            <input type="text"
                   class="form-control"
                   id="contactState"
                   @bind-value="@Address.State"
                   @onblur="@(() => UpdateParent())"/>
            <label for="contactState">State</label>
          </div>
        </div>

        <div class="col-md-4 my-3">
          <div class="form-floating">
            <input type="text"
                   class="form-control"
                   id="contactZip"
                   @bind-value="@Address.PostalCode"
                   @onblur="@(() => UpdateParent())"/>
            <label for="contactZip">Postal Code</label>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>